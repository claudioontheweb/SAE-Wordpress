{% extends "layouts/base.twig" %}
{% block content %}


	<!-- Landing Page -->
	<section id="introPage" class="page intro">
		<div class="intro__content">
			<div class="intro__content__left">
				<span>CW</span>
				<span></span>
				<span>2022</span>
			</div>
			<div class="intro__content__middle">
				<div class="intro__content__middle__container">
					<img class="three not-selectable" data-scroll data-scroll-speed="-1" src="{{ site.theme.link }}/assets/logo_3.svg" alt="Logo Grafik"/>
					<img class="two not-selectable" data-scroll data-scroll-direction="horizontal" data-scroll-speed="2" src="{{ site.theme.link }}/assets/logo_2.svg" alt="Logo Grafik"/>
					<img class="one not-selectable" data-scroll data-scroll-speed="1" src="{{ site.theme.link }}/assets/logo_1.svg" alt="Logo Grafik"/>
					<div class="shapeMorph1"></div>
					<div class="shapeMorph2"></div>
					<!--<img
																													class="zero not-selectable" data-scroll src="{{ site.theme.link }}/assets/logo_0.svg" alt="Logo Grafik"/>-->
					<!--<div class="wirrwarr1"></div>
																																												<div class="wirrwarr2"></div>-->

				</div>
			</div>
			<div class="intro__content__right">
				<div>
					<a id="scrollBtn">scroll</a>
				</div>
			</div>
		</div>
	</section>

	<div class="spacer"></div>

	<!-- Project Overview -->
	<section id="workPage" class="page project-overview">
		<div class="project-overview">
			<div class="project-overview__list">
				{% for post in posts %}
					<div class="project-overview__list__item">
						<a href="{{ post.link }}">{{  post.title|slice(0, 20) ~ '...' }}</a>
						<img class="project-overview-img" src="{{ post.thumbnail.src }}" alt=""/>
					</div>
				{% endfor %}
			</div>
			<div class="project-overview__arrow">
				<div class="project-overview__arrow__container">
					<img src="{{ site.theme.link }}/assets/arrow.svg" alt="Arrow to the right"/>
				</div>
			</div>
		</div>
	</section>

	<div class="spacer"></div>

	<!-- Project showcase / horizontal scroll -->
	<section class="horizontal-scroll" id="sectionPin">
		<div class="pin-wrap">
			<h2 class="heading">Check out my work</h2>

			{% for post in posts %}
				<div>
					<a href="{{post.link}}">
						<img class="imghover" src="{{post.thumbnail.src}}" alt="{{post.title}}"/>
					</a>
				</div>
			{% endfor %}

		</div>
	</section>

	<div class="spacer"></div>

	<!-- Banners / filler page -->
	<section class="page banner" data-scroll>
		<div class="banner__elem">
			<h2 data-scroll data-scroll-direction="horizontal" data-scroll-speed="5">Claudio Weckherlin Claudio Weckherlin Claudio Weckherlin Claudio Weckherlin
			</h2>
		</div>
		<div class="banner__elem">
			<h2 data-scroll data-scroll-direction="horizontal" data-scroll-speed="3">Claudio Weckherlin Claudio Weckherlin Claudio Weckherlin Claudio Weckherlin
			</h2>
		</div>
		<div class="banner__elem">
			<h2 data-scroll data-scroll-direction="horizontal" data-scroll-speed="-5">Claudio Weckherlin Claudio Weckherlin Claudio Weckherlin Claudio Weckherlin
			</h2>
		</div>
	</section>

	<div class="spacer"></div>

	<!-- Contact -->
	<section id="contactPage" class="page contact">
		<div class="contact__container">
			<div class="contact__container__text">
				<h2>Interested in working together?</h2>
			</div>
			<div class="contact__container__btn">
				<button onclick="document.location='mailto:claudio.weckherlin@gmail.com'">Say Hi!</button>
			</div>
		</div>
	</section>


{% endblock %}
